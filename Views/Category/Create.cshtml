@model CategoryMVC.Models.Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create Category";

}
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Add Category 
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!--div asp-validation-summary="All" class="text-danger"></div-->
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="CategoryName"> Category Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="col-2"></div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">  <input type="submit" class="btn btn-success w-100" value="Create" />   </div>
                            <div class="col"> <a class="btn btn-primary w-100" asp-controller="Category" asp-action="Index"> Back </a></div>


                        </div>
                    </div>

                </div>

            </div>
    </div>
    

</form>
@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial"></partial>}
}

