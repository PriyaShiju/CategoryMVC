@{
    ViewData["Title"] = "Delete Category";

}
<form method="post" asp-action="DeletePost">
    <input  type="hidden" asp-for="CategoryId" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Delete Category
            </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <!--<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
                <!--div asp-validation-summary="All" class="text-danger"></div-->
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="CategoryName"> Category Name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" disabled />
                        
                    </div>
                    <div class="col-2"></div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">  <input type="submit" class="btn btn-danger w-100"  value="Delete" />   </div>
                            <div class="col"> <a class="btn btn-primary w-100" asp-controller="Category" asp-action="Index"> Back </a></div>


                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</form>



