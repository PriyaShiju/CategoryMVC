@model IEnumerable<CategoryMVC.Models.Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
             <h3 class="text-primary"> List of Categories </h3>

        </div>
        <div class="col-6 text-right" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
                Create New Category
            </a></div>

    </div>
    <br />
    <br />
    @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-stripped" style="width:100%">
                    <thead><tr><th>Category Name</th></tr></thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td width="50%">
                                    @obj.CategoryName
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Edit"> Edit</a>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Delete"> Delete </a>
                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            }
            else
            {
                <p> No Category Exists</p>
            }
</div>
